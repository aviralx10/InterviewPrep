class Solution {
public:
    vector<vector<int>> levelOrder(TreeNode* root) {
        if(root==NULL){return {};}
        vector<vector<int> > res;
        vector<int> x;
        queue<TreeNode*> q;
        q.push(root);
        int count=1;
        while(!q.empty()){
            if(q.front()->left){q.push(q.front()->left);}
            if(q.front()->right){q.push(q.front()->right);}
            x.push_back(q.front()->val);
            q.pop();
            if(--count==0){
                res.push_back(x);
                x.clear();
                count=q.size();
            }
        }
        return res;
    }
};
